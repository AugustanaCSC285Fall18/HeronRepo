<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="320.0" prefWidth="396.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.csc285.heron.TimeWindowController">
   <children>
      <ImageView fx:id="videoView" fitHeight="171.0" fitWidth="301.0" layoutX="48.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true" />
      <Slider fx:id="videoBar" layoutX="79.0" layoutY="170.0" max="1000.0" prefHeight="93.0" prefWidth="239.0" />
      <Button fx:id="startBtn" layoutX="79.0" layoutY="251.0" mnemonicParsing="false" onAction="#selectStartTime" text="Start" />
      <Button fx:id="endBtn" layoutX="282.0" layoutY="251.0" mnemonicParsing="false" onAction="#selectEndTime" text="End" />
      <Button fx:id="nextBtn" layoutX="330.0" layoutY="276.0" mnemonicParsing="false" onAction="#handleNext" text="Next" />
      <Button fx:id="wholeBtn" layoutX="156.0" layoutY="251.0" mnemonicParsing="false" onAction="#wholeVideo" text="Whole Video" />
      <Canvas fx:id="canvasOverVideo" height="171.0" layoutX="48.0" layoutY="21.0" width="301.0" />
      <Label layoutX="94.0" layoutY="6.0" prefHeight="17.0" prefWidth="209.0" text="Click and create 2 point for caliberation" />
      <TextField fx:id="lengthOfLineText" layoutX="124.0" layoutY="294.0" onAction="#handleCaliberation" />
   </children>
</AnchorPane>
